{#=====================================================
  Delete workshop page
  - list of workshops to delete
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Workshop website - Home

{% endblock %}


{% block content %}

    <a href="/admin" role="button">back</a>
    {# main loop to show all the workshops that you can delete #}
    <article id="delete">
        
        <h3>Delete Workshops</h3>

        <ul class="w_list">
            {% for workshop in workshops %}

                <li>
                    <a href="/delete/{{ workshop.id }}" role="button">
                        {{ workshop.name }} workshop
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>


{% endblock %}

