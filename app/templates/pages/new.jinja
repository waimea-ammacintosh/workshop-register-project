{#=====================================================
  new workshop page
  - Form for adding a new workshop
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Workshop website - New Workshop

{% endblock %}


{% block content %}

    <a role="button" href="/admin">back</a>

    <article>
        {# form to add the new workshop #}
        <form action="/workshop" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Enter Workshop Name"
                required
            >

            <input
                type="text"
                name="person"
                placeholder="Enter Person Running Workshop"
                required
            >

            <input
                type="text"
                name="place"
                placeholder="Enter Place of Workshop"
                required
            >

            <input
                type="date"
                name="date"
                placeholder="Enter Date of Workshop (e.g. 4th August)"
                required
            >

            <fieldset>
                <input
                    type="time"
                    name="start_time"
                    placeholder="Enter Time of Workshop (e.g. 5pm-7pm)"
                    required
                >           

                <input
                    type="time"
                    name="end_time"
                    placeholder="Enter Time of Workshop (e.g. 5pm-7pm)"
                    required
                >           
            </fieldset>
            
            <button>Add the Workshop</button>

        </form>

    </article>

{% endblock %}

