{#=====================================================
  Admin page
  - Lists the registers for the admin to see
  - Links to add and delete workshops
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Workshop website - Admin Page

{% endblock %}


{% block content %}
    {# shows all the registers in a table #}
    <div id="top">
        <article>
            <table>
                <thead>
                    <tr>
                        <th>Name of Workshop</th>
                        <th>Name of Attendee</th>
                        <th>Last Name of Attendee</th>
                        <th>Phone Number of Attendee</th>
                        <th>Email of Attendee</th>
                    </tr>
                </thead>

                <tbody>                
                    {% for register in registers %}
                    <tr>
                        <td>
                            {{ register.w_name }}
                        </td>
                        <td>
                            {{ register.f_name }}
                        </td>
                        <td>
                            {{ register.l_name }}
                        </td>
                        <td>
                            {{ register.phone }}
                        </td>
                        <td>
                            {{ register.email }}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </article>
        <a href="/new" role="button" id="new_w">New Workshop</a>
   </div> 
    <article id="old">
        <h2>Old Workshops:</h2>
        {% for workshop in old %}
        <ul>
            <li>{{ workshop.name }}</li>
        </ul>
        {% endfor %}
    </article>
 
    <a href="/" role="button">Home</a>
    <a href="/delete/" role="button">Delete Workshops</a>
    <a href="/log-out/" role="button">Log out</a>

{% endblock %}

