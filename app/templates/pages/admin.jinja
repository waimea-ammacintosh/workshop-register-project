{#=====================================================
  Admin page
  - Lists the registers for the admin to see
  - Links to add and delete workshops
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Workshop website - Admin Page

{% endblock %}


{% block content %}
    {# shows all the registers in a table #}
    <div id="top">
        <article>
            <ul>
                {% for workshop in workshops %}
                    <li>
                        <a href="/registers/{{ workshop. id }}" role="button">{{ workshop.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </article>
        <a href="/new" role="button" id="new_w">New Workshop</a>
   </div> 
    <article id="old">
        <h2>Old Workshops:</h2>
        {% for workshop in old %}
        <ul>
            <li>{{ workshop.name }}</li>
        </ul>
        {% endfor %}
    </article>
 
    <a href="/" role="button">Home</a>
    <a href="/delete/" role="button">Delete Workshops</a>
    <a href="/log-out/" role="button">Log out</a>

{% endblock %}

