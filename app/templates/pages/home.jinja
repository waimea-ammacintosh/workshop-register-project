{#=====================================================
  Home page
  - Hero style greeting banner
  - List of workshops passed in as 'workshop' array
  - links to admin page and individual workshop pages
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Workshop website - Home

{% endblock %}


{% block content %}

    <head>
        <div id="top">
            <article>
                <h1>Workshop Organiser 3000</h1>
            </article>
            <a href="/log-in" role="button">admin</a>
        </div>
    </head>

    <article>

        <ul>
            {% for workshop in workshops %}

                <li>
                    <a href="/workshop/{{ workshop.id }}">
                        {{ workshop.name }} workshop
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>


{% endblock %}

