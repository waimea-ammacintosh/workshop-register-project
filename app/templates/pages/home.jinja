{#=====================================================
  Home page
  - Hero style greeting banner
  - List of workshops passed in as 'workshop' array
  - links to admin page and individual workshop pages
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Workshop website - Home

{% endblock %}


{% block content %}
{# head section #}
    <head>
        <div id="title">
            <article>
                <h1>Workshop Organiser 3000</h1>
            </article>

            {% if session["logged_in"] %}
                <a href="/admin" role="button">Admin</a>
            {% else %}
                <a href="/log-in" role="button">Log In</a>
            {% endif %}
        </div>
    </head>

    <article>
        {# this loop that lists all workshops #}
        <ul>
            {% for workshop in workshops %}

                <li>
                    <a href="/workshop/{{ workshop.id }}">
                        {{ workshop.name }} workshop
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>


{% endblock %}

