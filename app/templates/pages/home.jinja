{#=====================================================
  Home page
  - Hero style greeting banner
  - List of workshops passed in as 'workshop' array
  - links to admin page and individual workshop pages
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Workshop website - Home

{% endblock %}


{% block content %}
{# head section #}
    <head>
        <article id="title">

            <h1>Workshop Organizer 3000</h1>

            {% if session["logged_in"] %}
                <a href="/admin" role="button">Admin</a>
            {% else %}
                <a href="/log-in" role="button">Admin Log In</a>
            {% endif %}
        </article>
    </head>

    <article id="main_list">
        {# this loop that lists all workshops #}
        <ul>
            {% for workshop in workshops %}

                <li id="record">
                    <div id="name">
                        <strong>{{ workshop.name }} workshop</strong>
                    </div>
                    <div id="details">
                        <a href="/workshop/{{ workshop.id }}" id="link">
                            <strong>Details</strong>
                        </a>
                    </div>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>


{% endblock %}

